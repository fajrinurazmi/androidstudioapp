<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/etMainUsername"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:fontFamily="@font/poppins"
        />

    <TextView
        android:id="@+id/etMainName"
        android:layout_below="@+id/etMainUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:fontFamily="@font/poppins"/>

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_below="@id/etMainName"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/logocbm" />

    <Button
        android:id="@+id/btnInspeksi"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/ivLogo"
        android:drawableLeft="@drawable/ic_baseline_format_list_bulleted_24"
        android:paddingLeft="20dp"
        android:onClick="pindah"
        android:text="INSPEKSI      "
        android:drawablePadding="-40dp"
        android:textSize="20sp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/poppins"
        android:background="@drawable/radius_button"
        android:textColorHint="@color/ijo4"/>


    <Button
        android:id="@+id/btnTutup"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/btnInspeksi"
        android:drawableLeft="@drawable/ic_baseline_exit_to_app_24"
        android:paddingLeft="20dp"
        android:drawablePadding="-20dp"
        android:gravity="center_horizontal"
        android:onClick="tutup"
        android:text="TUTUP APLIKASI    "
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins"
        android:background="@drawable/radius_button"
        android:textColorHint="@color/ijo4"
        />

    <TextView
        android:id="@+id/tvVersi"
        android:layout_below="@+id/btnTutup"
        android:text="Versi 1.0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textStyle="italic"
        android:textSize="10dp"
        />

</RelativeLayout>